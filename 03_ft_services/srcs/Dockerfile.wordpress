FROM alpine:3.13.1

EXPOSE 5050

RUN apk update && \
	apk --no-cache add \
	nginx=1.18.0-r13 \
	openssl=1.1.1j-r0 \
	php7=7.4.15-r0 \
	php7-fpm=7.4.15-r0 \
    php7-json=7.4.15-r0 \
	php7-mbstring=7.4.15-r0 \
	php7-mysqli=7.4.15-r0 \
    php7-session=7.4.15-r0 \
	telegraf=1.17.0-r0

ADD wordpress-5.6.tar.gz /www/

CMD sh scripts/start.sh
